<h1>Hotel TW - Reservas Online</h1>
<p>Reservas Cadastradas</p>

<%if @reservas.present? %>
	  <p>Exibindo Todas Reservas Realizadas</p>
	  <!-- table width="100%" -->
		<table class="table table-hover">
	    <tr>
	      <td scope="col">Tipo de Cliente:</td>
	      <td scope="col">Data Inicial: </td>
	      <td scope="col">Data Final:</td>
	    </tr>
	    <%@reservas.each do |reserva|%>
	    <tr>
	      <td><%=reserva.tipo_cliente.type_client%></td>
	      <td><%=reserva.date_starting%></td>
	      <td><%=reserva.date_exit%></td>
	      <td>
	        <%= link_to "Editar", edit_reserva_path(reserva[:id]) %> 
	        <%= link_to "Deletar", reserva_path(reserva[:id]), :method => :delete %>
	      </td>
	    </tr>
	   <%end%>
	  </table>
	<%else%>
	  <p>NÃ£o existem Reservas realizadas</p>
	<%end%>

<ul class="nav flex-column">
  <li> <%= link_to 'Voltar', root_path %>  </li >
  <li><%= link_to "Nova Reserva", new_reserva_path %></li>
</ul>
