<% if @reserva.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @reserva.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>

<%= @formatted_data1 %><br>
<%= @formatted_data2 %><br>
<%= @time_data1 %><br>
<%= @time_data2 %><br><br>
Dias Corridos: <%= @differ %><br>
Dias de semana: <%= @weekdays %><br>
Dias de Fim de semana: <%= @weekend_days %><br><br>


<%= form_for(reserva) do |f| %>
  
    <%= f.label :tipo_cliente_id %>
    <%= f.collection_select(:tipo_cliente_id, @tipo_clientes, :id, :type_client) %><br>
  
    <%= f.label :date_starting %>
    <%= f.text_field :date_starting %><br>
  
    <%= f.label :date_exit %>
    <%= f.text_field :date_exit %><br>

    <%= f.submit class:'btn btn-primary' %>
  
<% end %>
